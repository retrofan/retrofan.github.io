@model CapstoneWIE.DataLayer.Models.BlogPost
@{
    ViewBag.Title = "BlogDetails";
}
<div>
    <div class="container-fluid" ng-controller="blogDetails">
        <div class="row">
            <div id="particleJs2" style="background-color: #b21f28; height: 200px; z-index: -999999999999999; position: absolute; width: 100%">
            </div>
        </div>
    </div>
    <div style="color:#e9e9e9; text-align: center; font-size: 50px; padding-top: 100px">@Model.Title</div>
    <div class="container" style="padding-top: 30px">
        <div class="row">
            <h4 class="text-center">@Model.ApplicationUser.FirstName - @Model.ApplicationUser.LastName</h4>
        </div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10" style="padding-top: 10px; font-size: 16px; overflow-wrap: break-word;">
                @Html.Raw(Model.Content)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10" style="text-align: center">
                @foreach (var tag in Model.Tags)
                {
                    <span class="btn btn-default btn-sm nohover">@tag.Name</span>
                }
            </div>
        </div>
    </div>
</div>